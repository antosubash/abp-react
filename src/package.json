    "lint": "next lint --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "gen-api": "npx @hey-api/openapi-ts -i https://abp.antosubash.com/swagger/v1/swagger.json -o src/client -c @hey-api/client-fetch",
    "release": "release-it"
  },
